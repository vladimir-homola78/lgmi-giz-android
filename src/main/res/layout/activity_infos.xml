<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.ibrow.de.giz.siegelklarheit.InfosActivity">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical"
        >
            <com.ibrow.de.giz.siegelklarheit.SiegelWebView
                android:layout_width="match_parent"
                android:layout_height="fill_parent"
                android:id="@+id/info_webview"
                android:minHeight="300dp"
                >
            </com.ibrow.de.giz.siegelklarheit.SiegelWebView>

            <Button
                style="@style/ButtonTheme"
                android:layout_marginLeft="@dimen/large_margin"
                android:layout_marginRight="@dimen/large_margin"
                android:layout_marginBottom="@dimen/activity_horizontal_margin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/start_tour_btn"
                android:layout_gravity="center"
                android:id="@+id/start_tour_btn"
                />

        </LinearLayout>


    </ScrollView>

    <!-- The navigation drawer -->
    <ListView android:id="@+id/nav_drawer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:choiceMode="singleChoice"
        android:divider="#ddd"
        android:dividerHeight="1dp"
        android:background="#fff"
        android:footerDividersEnabled="false"
        android:listSelector="@drawable/navdraw_selector"
        >

    </ListView>

</android.support.v4.widget.DrawerLayout>