<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

<ScrollView  xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/details_scroll_view"
>


<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="match_parent"
    tools:context=".DetailsActivity"
    android:orientation="vertical"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/logo_view_container"
        android:paddingTop="3dp"
        android:paddingBottom="3dp"
    >

        <ImageView
            android:id="@+id/logo_view"
            android:layout_width="match_parent"
            android:layout_height="96dp"

            android:src="@drawable/loading"
        /><!-- unfortunately animation not supported -->

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/rating_view"
        android:orientation="horizontal"
        android:background="#888888"
        android:minHeight="96dp"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="3dp"
        android:paddingBottom="3dp"
     >
        <ImageView
            android:id="@+id/rating_symbol_image"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@drawable/blank_rating_symbol"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
        />

        <TextView
            android:paddingTop="3dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="[Unknown]"
            android:id="@+id/rating_symbol_text"
            android:textColor="#ffffff"
            android:textSize="16dp"
        />

    </LinearLayout>

    <WebView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/details_webview"
        android:minHeight="96dp"
        android:padding="@dimen/activity_horizontal_margin"
        android:background="#ffffff"
        >

    </WebView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical"
        android:id="@+id/no_infos_holder"
        android:visibility="gone"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
    >
        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/details_no_info"
            android:id="@+id/no_infos_text"
            />

        <Button
            style="@style/ButtonTheme"
            android:layout_marginTop="@dimen/large_margin"
            android:layout_marginBottom="@dimen/large_margin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/no_infos_show_list_btn"
            android:text="@string/details_no_info_list_btn"
            />

    </LinearLayout>

</LinearLayout>

</ScrollView>

    <!-- The navigation drawer -->
    <ListView android:id="@+id/nav_drawer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:choiceMode="singleChoice"
        android:divider="#ddd"
        android:dividerHeight="1dp"
        android:background="#fff"
        android:footerDividersEnabled="false"
        android:listSelector="@drawable/navdraw_selector"
        >
        <!-- android:minWidth="240dp" -->

    </ListView>
</android.support.v4.widget.DrawerLayout>
